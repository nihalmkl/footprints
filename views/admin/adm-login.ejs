<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
   <style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }
    .container {
        display: flex;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        max-width: 800px;
        width: 100%;
    }
    .form-container {
        padding: 30px;
        flex: 1;
    }
    h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #5a5a5a;
    }
    .input-field {
        width: 90%;
        padding: 15px;
        margin: 10px 0;
        border-radius: 5px;
        border: 1px solid #ccc;
        transition: border-color 0.3s;
    }
    .input-field:focus {
        border-color: #88c8bc;
        outline: none;
    }
    .btn {
        width: 100%;
        padding: 15px;
        background-color: #88c8bc;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s;
    }
    .btn:hover {
        background-color: #79d2b1;
    }
    .remember-me {
        display: flex;
        align-items: center;
        margin: 10px 0;
    }
    .remember-me input {
        margin-right: 5px;
    }
    .link {
        display: block;
        text-align: center;
        margin-top: 15px;
        font-size: 14px;
    }
    .link a {
        color: #337ab7;
        text-decoration: none;
    }
    .link a:hover {
        text-decoration: underline;
    }
    .google-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #4285F4;
        color: white;
        padding: 15px;
        border-radius: 5px;
        margin-top: 15px;
        text-decoration: none;
        font-weight: bold;
        text-align: center;
    }
    .google-btn:hover {
        background-color: #357ae8;
    }
    .image-container {
        flex: 1;
        background-image: url('https://sc04.alicdn.com/kf/H1742c0fdbfb8466a91b73cb6fdaa5fc2g.jpg'); /* Replace with your image URL */
        background-size: cover;
        background-position: center;
    }
    </style>
</head>
<body>

<div class="container">
    <div class="form-container">
        <h2> Admin Login</h2>
        <form id="adminLogin" action="/adm-login" method="POST">
            <div>
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="input-field" placeholder="Enter your email" >
            <small id="emailError" style="color: red;"></small>
            </div>
            <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="input-field" placeholder="**********" >
            <small id="passwordError" style="color: red;"></small>
        </div>
            <button type="submit" class="btn">Sign In</button>
        </form>
    </div>
    <div class="image-container"></div>
</div>

</body>
</html>

<script>
    document.getElementById('adminLogin').addEventListener('submit', async function(event) {
        event.preventDefault()
    const email = document.getElementById('email').value.trim();
    const password = document.getElementById('password').value.trim();

    const emailError = document.getElementById('emailError');
    const passwordError = document.getElementById('passwordError');
    emailError.innerHTML=""
    passwordError.innerHTML=""
    let isValid = true;
        if(!password){
            passwordError.innerHTML="Password is required"
            isValid=false
        }
        if(!email){
            emailError.innerHTML="Email is required"
            isValid=false
        }
        if(!isValid){
            return
        }

        const responce = await fetch('/admin/adm-login',{
            method:'POST',
            headers:{
                'Content-Type':'application/json'
            },
            body:JSON.stringify({email,password})
        });
        const data = await responce.json()
        if(data.success){
            window.location.href='/admin/dashboard'
        }
        if(!data.success){
            emailError.innerHTML="Email or password is incorrect"
            passwordError.innerHTML="Email or password is incorrect"
        }

    });

</script>