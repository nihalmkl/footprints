<div class="container mt-5 container-add">
    <form action="#" method="POST" enctype="multipart/form-data">
        <!-- Product ID and Name -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="productName" class="form-label">Product Name</label>
                <input type="text" class="form-control" id="productName" placeholder="Enter product name" required>
            </div>
        </div>

        <!-- Category and Brand -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="category" class="form-label">Category</label>
                <select class="form-select" id="category" required>
                    <option selected disabled>Select Category</option>
                    <option>Casual Shoes</option>
                    <option>Sports Shoes</option>
                    <option>Formal Shoes</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="brand" class="form-label">Brand</label>
                <select class="form-select" id="brand" required>
                    <option selected disabled>Select Category</option>
                    <option>Casual Shoes</option>
                    <option>Sports Shoes</option>
                    <option>Formal Shoes</option>
                </select>
            </div>
        </div>

        <!-- Stock, Color, Price, and Size -->
        <div class="row mb-3">
            <div class="col-md-3">
                <label for="stock" class="form-label">Stock</label>
                <input type="number" class="form-control" id="stock" placeholder="Enter stock quantity" required>
            </div>
            <div class="col-md-3">
                <label for="color" class="form-label">Color</label>
                <input type="text" class="form-control" id="color" placeholder="Enter color" required>
            </div>
            <div class="col-md-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" id="price" placeholder="Enter price" required>
            </div>
            <div class="col-md-3">
                <label for="size" class="form-label">Size</label>
                <input type="text" class="form-control" id="size" placeholder="Enter size" required>
            </div>
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" rows="3" placeholder="Enter product description"></textarea>
        </div>

        <!-- Product Images Upload -->
        <div class="mb-4">
            <label for="productImages" class="form-label">Upload Product Images (Max 4)</label>
            <input class="form-control" type="file" id="productImages" name="productImages[]" multiple accept="image/*" required>
            <input class="form-control" type="file" id="productImages" name="productImages[]" multiple accept="image/*" required>
            <input class="form-control" type="file" id="productImages" name="productImages[]" multiple accept="image/*" required>
            <input class="form-control" type="file" id="productImages" name="productImages[]" multiple accept="image/*" required>
            <div class="form-text">You can upload up to 4 images.</div>
        </div>
        <!-- Submit Button -->
        <button type="submit" class="btn cust-btn">Add Product</button>
    </form>
</div>

