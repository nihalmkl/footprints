        text: result.message,
        confirmButtonText: 'OK'
      }).then(() => {
        window.location.reload()
      })
    } else {
      Swal.fire({
        icon: 'error',
        title: 'Error Occurred',
        text: result.error,
        confirmButtonText: 'OK'
      })
    }
  } catch (error) {
    Swal.fire({
      icon: 'error',
      title: 'Network Error',
      text: 'An error occurred. Please check your network connection.',
      confirmButtonText: 'OK'
    })
  }
}
