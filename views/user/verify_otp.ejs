<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            padding: 30px;
            max-width: 400px;
            width: 100%;
            text-align: center;
        }
        h2 {
            margin-bottom: 20px;
            color: #5a5a5a;
        }
        .input-field {
            width: 90%;
            padding: 15px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #ccc;
            transition: border-color 0.3s;
        }
        .input-field:focus {
            border-color: #88c8bc;
            outline: none;
        }
        .btn {
            width: 100%;
            padding: 15px;
            background-color: #88c8bc;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
            margin-top: 10px;
        }
        .btn:hover {
            background-color: #69d99f;
        }
        .link {
            margin-top: 15px;
            font-size: 14px;
            display: flex;
            justify-content: space-between;
        }
        .link a {
            color: #3f3f3f;
            text-decoration: none;
        }
        .link a:hover {
            color: #02466b;
        }
    </style>

</head>
<body>

    <div class="container">
        <h2>OTP Verification</h2>
        <p>Please enter the six-digit code</p>
        <form action="verify-otp" method="POST" onsubmit="return validateForm()">
        <input type="text" id="otpInput" class="input-field" placeholder="Enter OTP" maxlength="6" required>
        <p id="timer">02:15</p> <!-- Timer placeholder -->
        <div class="link">
            <a id="resendLink" style="display: none;">Didn’t you receive the OTP?</a>
            <a id="resendButton" href="#" style="display: none;">Resend OTP</a>
        </div>
        <button id="verifyButton" type="submit" class="btn">Verify OTP</button>
    </form>
    </div>
    <script>
    document.addEventListener("DOMContentLoaded", function() {
        // Timer variables
        let countdownTime =  30 ; 
        const timerElement = document.getElementById('timer');
        const resendLink = document.getElementById('resendLink');
        const resendButton = document.getElementById('resendButton');
        const verifyButton = document.getElementById('verifyButton');
    
        // Start the countdown timer
        const countdown = setInterval(() => {
            // Calculate minutes and seconds
            const minutes = Math.floor(countdownTime / 30);
            const seconds = countdownTime % 60;
    
            // Format the time to MM:SS
            timerElement.textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
    
            // Decrease the countdown time
            countdownTime--;
    
            // When the countdown reaches zero
            if (countdownTime < 0) {
                clearInterval(countdown);
                timerElement.textContent = "00:00";
                resendLink.style.display = "block"; // Show "Didn’t you receive the OTP?" link
                resendButton.style.display = "block"; // Show "Resend OTP" button
            }
        }, 1000); // Update every second
    
        // Event listener for the "Resend OTP" button
        resendButton.addEventListener('click', () => {
            document.getElementById("otpInput").disabled = true;
        resendButton.disabled = true;

        // Call the resend OTP API
        $.ajax({
            type: "POST",
            url: "/resend-otp", // Adjust your backend route for resending OTP
            success: function(res) {
                if (res.success) {
                    Swal.fire({
                        title: "OTP Resent",
                        text: "A new OTP has been sent to your email/phone.",
                        icon: "success",
                        timer: 1500,
                        showConfirmButton: false
                    });

                    // Restart the timer
                    countdownTime = 30; // Reset to 30 seconds or desired value
                    document.getElementById("otpInput").disabled = false;
                    resendButton.disabled = false;
                    resendLink.style.display = "none";
                    resendButton.style.display = "none";
                    
                    setInterval(countdown, 1000);
                } else {
                    Swal.fire({
                        title: "Error",
                        text: "Failed to resend OTP, please try again.",
                        icon: "error",
                        timer: 1500,
                        showConfirmButton: false
                    });
                }
            },
            error: function() {
                Swal.fire({
                    title: "Error",
                    text: "Something went wrong. Please try again later.",
                    icon: "error",
                    timer: 1500,
                    showConfirmButton: false
                });
            }
        });
    });
});
        
        function validateForm(){
            const otpInput=document.getElementById('otpInput').value
            $.ajax({
                type:"POST",
                url:"/verify-otp",
                data:{otp:otpInput},
                success:function(res){
                    if(res.success){
                        Swal.fire({
                      title: "Good job!",
                      text: "OTP verified successfully!",
                      icon: "success",
                      timer:1500,
                      showConfirmButton:false
                      }).then(()=> window.location.href= res.redirectUrl )
                    }else{
                        Swal.fire({
                      title: "Error!",
                      text: res.message,
                      icon: "error",
                      timer:1500,
                      showConfirmButton:false
                        })
                    }
                },
                error:function(){
                    Swal.fire({
                      title: "Error!",
                      text: "Please try again later",
                      icon: "error",
                      timer:1500,
                      showConfirmButton:false
                        })
                }
            })
            return false
        }
</script>
</body>
</html>