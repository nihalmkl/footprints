    </div>
                `);
            });

            $('#walletLink').click(function (e) {
                e.preventDefault();
                $('#dynamicContent').html(`
                    <div>
                    <h4>Wallet</h4>
                    <div class="wallet-card">
                        <div>
                            <h4>Balance: $100</h4>
                        </div>
                        <div class="wallet-icon">
                            <i class="fas fa-wallet"></i>
