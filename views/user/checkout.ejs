async function applyCoupon(event) {
  event.preventDefault()
  
  const couponCode = document.getElementById('coupon-code').value
  const totalPrice = document.getElementById('ordertotal').textContent
    console.log(couponCode,totalPrice)
  if (!couponCode) {
    Swal.fire({
      icon: 'warning',
      title: 'Oops...',
      text: 'Please enter a coupon code.'
    })
    return
  }

  try {
    const response = await fetch('/apply-coupon', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ couponCode,totalPrice })
    })

    const data = await response.json()
    
    if (data.success) {
      Swal.fire({
        icon: 'success',
        title: 'Coupon Applied!',
        text: `New total: ₹${data.newTotal}`,
        showConfirmButton: false,
        timer: 2000
      })
      document.getElementById('coupon-success').innerText = `Coupon applied! New total: ₹${data.newTotal}`
      document.getElementById('discount-price-div').innerHTML = data.discount
      document.getElementById('ordertotal').innerHTML = data.newTotal
    } else {
      Swal.fire({
        icon: 'error',
        title: 'Invalid Coupon',
        text: data.message
      })
    }
  } catch (error) {
    console.error('Error applying coupon:', error)
    Swal.fire({
      icon: 'error',
      title: 'Error',
      text: 'There was an error applying the coupon. Please try again later.'
    })
  }
}


    // Get the modal, the button that opens it, and the close button
    const modal = document.getElementById("couponModal")
    const openModalBtn = document.getElementById("openModal")
    const closeModalBtn = document.querySelector(".close")
  
    // Open the modal when clicking "Available Coupons"
    openModalBtn.addEventListener("click", function (event) {
      event.preventDefault()
      modal.style.display = "block"
    })
  
    // Close the modal when clicking the "x" button
    closeModalBtn.addEventListener("click", function () {
      modal.style.display = "none"
    })
  
    // Close the modal if the user clicks outside the modal content
    window.addEventListener("click", function (event) {
      if (event.target == modal) {
        modal.style.display = "none"
      }
    })
    function copyCode(event, couponId) {
        event.preventDefault()

        const couponCodeElement = document.getElementById(`couponCode${couponId}`)
        
        const tempInput = document.createElement("input")
        document.body.appendChild(tempInput)
        tempInput.value = couponCodeElement.textContent // Set the input's value to the coupon code
        tempInput.select() // Select the text inside the input

        // Copy the selected text to the clipboard
        document.execCommand("copy")
        
        // Remove the temporary input element
        document.body.removeChild(tempInput)

        // Optional: Show a confirmation message
        document.getElementById("coupon-success").textContent = "Coupon code copied!"
        setTimeout(() => {
            document.getElementById("coupon-success").textContent = ""
        }, 3000)
    }
  
</script>

